<web-app>
  <description>Demo Database using Servlets</description>

  <display-name>Demonstration of a Simple Database Webapp</display-name>

  <request-character-encoding>UTF-8</request-character-encoding>

  <servlet>
    <servlet-name>Welcome</servlet-name>
    <servlet-class>Welcome</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AllProducts</servlet-name>
    <servlet-class>AllProducts</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AddProduct</servlet-name>
    <servlet-class>AddProduct</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Welcome</servlet-name>
    <url-pattern>/index.html</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Welcome</servlet-name>
    <url-pattern>/welcome</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AllProducts</servlet-name>
    <url-pattern>/all-products</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AddProduct</servlet-name>
    <url-pattern>/add-product</url-pattern>
  </servlet-mapping>

</web-app>